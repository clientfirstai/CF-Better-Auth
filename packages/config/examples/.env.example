# CF-Better-Auth Environment Variables Example
# Copy this file to .env and update the values for your environment

# =============================================================================
# Application Configuration
# =============================================================================

# Application name
CF_AUTH_APP_NAME="CF-Better-Auth Example"

# Application environment (development, production, test, staging)
CF_AUTH_APP_ENV=development

# Server configuration
CF_AUTH_APP_HOST=localhost
CF_AUTH_APP_PORT=3000
CF_AUTH_APP_URL=http://localhost:3000

# Debug mode
CF_AUTH_DEBUG=true

# =============================================================================
# Database Configuration
# =============================================================================

# Database connection URL (preferred method)
DATABASE_URL=postgresql://postgres:password@localhost:5432/cf_auth_dev

# Alternative: Individual database settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cf_auth_dev
DB_USER=postgres
DB_PASSWORD=password

# Database SSL settings
DB_SSL_ENABLED=false
DB_SSL_REJECT_UNAUTHORIZED=true

# =============================================================================
# Security Configuration
# =============================================================================

# Main application secret (minimum 32 characters)
SECRET_KEY=your-super-secret-key-that-should-be-32-chars-minimum

# Session secret (minimum 32 characters)
SESSION_SECRET=your-session-secret-that-should-be-32-chars-minimum

# JWT secret (minimum 32 characters)
JWT_SECRET=your-jwt-secret-that-should-be-32-chars-minimum

# Encryption key for sensitive data (minimum 32 characters)
ENCRYPTION_KEY=your-encryption-key-that-should-be-32-chars-minimum

# CSRF protection secret
CSRF_SECRET=your-csrf-secret-that-should-be-32-chars-minimum

# =============================================================================
# Email Configuration
# =============================================================================

# Email provider (smtp, sendgrid, mailgun, ses)
CF_AUTH_EMAIL_PROVIDER=smtp

# From email address
EMAIL_FROM=noreply@example.com

# Reply-to email address
EMAIL_REPLY_TO=support@example.com

# SMTP Configuration (if using SMTP provider)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_SECURE=false

# SendGrid Configuration (if using SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key

# Mailgun Configuration (if using Mailgun)
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=your-mailgun-domain

# =============================================================================
# OAuth/Social Authentication Configuration
# =============================================================================

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Facebook OAuth
FACEBOOK_CLIENT_ID=your-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret

# Twitter OAuth
TWITTER_CONSUMER_KEY=your-twitter-consumer-key
TWITTER_CONSUMER_SECRET=your-twitter-consumer-secret

# Microsoft OAuth
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# =============================================================================
# External Services Configuration
# =============================================================================

# Redis configuration (for session storage, caching, etc.)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# AWS Configuration (for S3, SES, etc.)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket

# Cloudflare Configuration
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id

# =============================================================================
# Monitoring and Analytics Configuration
# =============================================================================

# Sentry DSN for error tracking
SENTRY_DSN=your-sentry-dsn

# Google Analytics ID
GOOGLE_ANALYTICS_ID=your-google-analytics-id

# Mixpanel token
MIXPANEL_TOKEN=your-mixpanel-token

# PostHog configuration
POSTHOG_API_KEY=your-posthog-api-key
POSTHOG_HOST=https://app.posthog.com

# =============================================================================
# Development/Testing Configuration
# =============================================================================

# Enable test mode
TEST_MODE=false

# Mock external services in development
MOCK_EXTERNAL_SERVICES=false

# Disable email sending in development
DISABLE_EMAIL=false

# Enable debug logging
DEBUG=cf-auth:*

# =============================================================================
# Production-specific Configuration
# =============================================================================

# Enable clustering in production
CLUSTER_ENABLED=false

# Number of worker processes
WORKER_PROCESSES=1

# Enable compression
COMPRESSION_ENABLED=true

# Enable caching
CACHE_ENABLED=true

# Trust proxy (for load balancers)
TRUST_PROXY=false

# =============================================================================
# Secret Store Configuration (Optional)
# =============================================================================

# HashiCorp Vault
VAULT_URL=https://vault.example.com
VAULT_TOKEN=your-vault-token
VAULT_PATH=secret/cf-auth

# AWS Secrets Manager
AWS_SECRETS_REGION=us-east-1
AWS_SECRETS_NAME=cf-auth/secrets

# Azure Key Vault
AZURE_KEYVAULT_URL=https://your-vault.vault.azure.net/
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=your-azure-tenant-id

# =============================================================================
# Advanced Configuration
# =============================================================================

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS configuration
CORS_ENABLED=true
CORS_ORIGIN=http://localhost:3001,http://localhost:3000
CORS_CREDENTIALS=true

# Session configuration
SESSION_DURATION=86400000
SESSION_NAME=cf-auth-session
SESSION_SECURE=false

# JWT configuration
JWT_ALGORITHM=HS256
JWT_EXPIRES_IN=1h
JWT_ISSUER=cf-auth

# Password policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=false

# MFA configuration
MFA_ENABLED=false
MFA_REQUIRED=false
TOTP_ISSUER=CF-Better-Auth

# Verification settings
EMAIL_VERIFICATION_ENABLED=true
EMAIL_VERIFICATION_REQUIRED=true
PHONE_VERIFICATION_ENABLED=false

# =============================================================================
# Feature Flags
# =============================================================================

# Enable user registration
FEATURE_REGISTRATION=true

# Enable social authentication
FEATURE_SOCIAL_AUTH=true

# Enable multi-factor authentication
FEATURE_MFA=false

# Enable organizations/teams
FEATURE_ORGANIZATIONS=false

# Enable API key authentication
FEATURE_API_KEYS=false

# Enable webhooks
FEATURE_WEBHOOKS=false

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level (trace, debug, info, warn, error, fatal)
LOG_LEVEL=debug

# Log format (pretty, json, text)
LOG_FORMAT=pretty

# Enable file logging
LOG_FILE_ENABLED=false
LOG_FILE_PATH=./logs/app.log
LOG_FILE_MAX_SIZE=10MB
LOG_FILE_MAX_FILES=5

# =============================================================================
# Health Check Configuration
# =============================================================================

# Enable health checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# Include system info in health checks
HEALTH_CHECK_INCLUDE_SYSTEM=false

# Health check timeout
HEALTH_CHECK_TIMEOUT=5000

# =============================================================================
# Metrics Configuration
# =============================================================================

# Enable metrics collection
METRICS_ENABLED=false
METRICS_PATH=/metrics
METRICS_FORMAT=prometheus

# Include default Node.js metrics
METRICS_INCLUDE_DEFAULTS=true

# Include HTTP request metrics
METRICS_INCLUDE_HTTP=true

# Include authentication metrics
METRICS_INCLUDE_AUTH=true