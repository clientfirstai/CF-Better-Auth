# Docker Environment Configuration
# Copy this file to .env and update with your values

# =============================================================================
# Application Configuration
# =============================================================================
NODE_ENV=development
APP_NAME=CF Better Auth
APP_DOMAIN=localhost
APP_LOGO_URL=/logo.png
APP_DESCRIPTION=Enterprise Authentication Platform
APP_PRIMARY_COLOR=#3B82F6
APP_FAVICON=/favicon.ico

# =============================================================================
# Database Configuration
# =============================================================================
DB_NAME=cf_auth
DB_USER=cf_auth_user
DB_PASSWORD=secure_password_change_in_production
DATABASE_PROVIDER=postgresql
DATABASE_POOL_SIZE=20

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_PASSWORD=redis_secure_password
REDIS_TTL=3600

# =============================================================================
# Authentication Configuration
# =============================================================================
BETTER_AUTH_SECRET=your-super-secret-key-minimum-32-characters-long-replace-in-production
BETTER_AUTH_URL=http://localhost:3000

# =============================================================================
# URLs (Public)
# =============================================================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_AUTH_SERVER_URL=http://localhost:8787
NEXT_PUBLIC_WS_URL=ws://localhost:8787

# =============================================================================
# OAuth Providers (Optional)
# =============================================================================
# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Discord OAuth
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=

# Facebook OAuth
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=

# Apple OAuth
APPLE_CLIENT_ID=
APPLE_CLIENT_SECRET=

# =============================================================================
# Email Service (Optional)
# =============================================================================
# SendGrid
SENDGRID_API_KEY=
FROM_EMAIL=noreply@yourdomain.com
SUPPORT_EMAIL=support@yourdomain.com

# Resend (Alternative)
RESEND_API_KEY=

# =============================================================================
# SMS Service (Optional)
# =============================================================================
# Twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_EMAIL_AUTH=true
ENABLE_OAUTH=true
ENABLE_PASSKEYS=true
ENABLE_MAGIC_LINKS=true
ENABLE_2FA=true
ENABLE_API_KEYS=true

# =============================================================================
# Security Configuration
# =============================================================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8787
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# OIDC Configuration (Optional)
# =============================================================================
OIDC_CLIENT_SECRET=

# =============================================================================
# Custom OAuth Provider (Optional)
# =============================================================================
CUSTOM_OAUTH_CLIENT_ID=
CUSTOM_OAUTH_CLIENT_SECRET=

# =============================================================================
# AI Documentation (Optional)
# =============================================================================
GEMINI_API_KEY=

# =============================================================================
# Docker Configuration
# =============================================================================
# Docker Registry (for production)
DOCKER_REGISTRY=docker.io
DOCKER_NAMESPACE=cfauth
VERSION=latest

# Docker Commands (override defaults)
AUTH_SERVER_CMD=npm run dev
WEBAPP_CMD=npm run dev

# =============================================================================
# Production Only
# =============================================================================
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem
# BACKUP_SCHEDULE=0 2 * * *
# BACKUP_RETENTION_DAYS=30